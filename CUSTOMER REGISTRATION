Sub SaveRecord() 
If TextBox1.Text = "" Then 
MsgBox("Please enter the necessary details") 
Exit Sub 
End If 
If Conn.State = ConnectionState.Open Then Conn.Close() 
Conn.Open() 
Dim Cmd0 As New SqlCommand("select custnm from custreg where custnm='" & 
(TextBox1.Text) & "'", Conn) 
Dim D1 As SqlDataReader = Cmd0.ExecuteReader() 
If D1.HasRows Then 
MsgBox("This record is allready present in the database") 
If Conn.State = ConnectionState.Open Then Conn.Close() 
Exit Sub 
End If 
If Conn.State = ConnectionState.Open Then Conn.Close() 
Conn.Open() 
q1Var = "insert into custreg(" 
q2Var = " values(" 
q1Var = q1Var & "custnm" & "," 
q2Var = q2Var & "'" & (TextBox1.Text) & "'," 
q1Var = q1Var & "custid" & "," 
q2Var = q2Var & "'" & (TextBox2.Text) & "'," 
q1Var = q1Var & "address" & "," 
q2Var = q2Var & "'" & (TextBox3.Text) & "'," 
q1Var = q1Var & "dob" & "," 
q2Var = q2Var & "'" & (TextBox4.Text) & "'," 
q1Var = q1Var & "phno" & "," 
q2Var = q2Var & "'" & (TextBox5.Text) & "'," 
q1Var = q1Var & "email" & ")" 
q2Var = q2Var & "'" & TextBox6.Text & "')" 
Dim cmd1 As New SqlCommand(q1Var & q2Var, Conn) 
cmd1.ExecuteNonQuery() 
If Conn.State = ConnectionState.Open Then Conn.Close() 
